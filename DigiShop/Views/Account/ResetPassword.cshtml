@model DigiKalaShop.ViewModels.Users.ResetPasswordViewModel
<link rel="stylesheet" href="~/css/AuthForm.css">
<title>@ViewData["Title"] ایجاد رمز عبور جدید </title>
<link rel="stylesheet" href="~/css/Account.css">
@{
    Layout = "AuthAccount";
}
@{
    if (Model!= null && !String.IsNullOrEmpty(Model.Message) && Model.IsCompleted)
    {
        <span class="alert alert-success hide" style="margin-left: 95px;margin-top: 40px">@Model.Message</span>
    }
    else if(Model != null && !String.IsNullOrEmpty(Model.Message))
    {
        <span class="alert alert-danger hide" style="margin-left: 95px;margin-top: 40px">@Model.Message</span>
    }
}
<body class="bodycolor">
<card>
    <img src="~/Images/Sites/DigiShop.png" class="img-responsive logo" style="padding-right: 75px; margin-right: 55px" alt="دیجی شاپ">
    <div class="card card-header bodycolor">
        <h1 class="titleStyle"> DigiShop</h1>
    </div>
    <div class="card card-body">
        
        <div class="row">
            <div class="col-md-12">
                <form asp-action="ResetPassword" asp-controller="Account" method="post">
                    
                    <div class="form-group">
                        <input asp-for="Password" class="form-control inputStyle" placeholder="رمز جدید ... ">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <br>
                    <div class="card vr-cardboard btncardStyle">
                        <button class="btn btn-primary btncardStyle" type="submit" dir="rtl">ارسال</button>
                    </div>
                    <br>
                    @{
                        if (Model.IsSuccessful)
                        {
                            <script>
                               setTimeout(function() {
                                   location.assign("@Url.Action("login","Account")");
                               },3000)
                        </script>
                        }
                    }
                </form>
            </div>
        </div>
    </div>
</card>
</body>