@model List<DigiShop.CoreBussiness.EfCoreDomains.StoreCategories.StoreCategory>
<link rel="stylesheet" href="~/font-awesome-4.7.0/font-awesome-4.7.0/css/font-awesome.min.css">
<nav class="navbar navbar-expand-lg navbar-light nav" style="background-color:whitesmoke">
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="navbar-nav">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown"><span class="bg bg-light">زیر گروه</span></a>
                <div class="dropdown-menu bg bg-light " aria-labelledby="navbarDropdownMenuLink">
                    <a class="dropdown-item bg bg-light" href="@Url.Action("AddCategory","Admin")">اضافه دسته</a> <a class="dropdown-item" href="#">مدیریت دسته</a> <a class="dropdown-item" href="#"></a>
                    <div class="dropdown-divider">
                    </div> <a class="dropdown-item" href="#"></a>
                </div>
            </li>
        </ul>
        <form class="form-inline" asp-action="ShowCategoryHead" method="get" asp-controller="Admin">
            <input class="form-control mr-sm-2 btn-outline-light" type="text" name="searchvalue" placeholder="جست و جو ..."/>
            <button class="btn btn-primary -2 my-sm-0" type="submit">
                جست و جو
            </button>
        </form>
    </div>
</nav>

<div>
    <table class="table table-bordered table-hover  table-light table-bordered" id="myTable" >
        <thead>
        <tr>
            <th>دسته ها</th>
            <th>نمایش</th>
            <th>عملیات</th>
        </tr>
        </thead>
        <tbody>
        @{
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryName</td>
                    <td>
                        <i class="fa fa-@item.icon fa-2x"></i>
                    </td>
                    <td>
                        <a href="@Url.Action("ModifyCategory","Admin",new {id=item.id})"><button class="btn btn-primary">ویرایش دسته</button></a>
                               <a href="@Url.Action("DeleteCategory","Admin",new{id = item.id})"><button class="btn btn-primary">حذف دسته</button></a>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>