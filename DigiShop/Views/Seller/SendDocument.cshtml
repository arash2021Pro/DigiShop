@model DigiKalaShop.ViewModels.Stores.SendDocumentViewModel
<link rel="stylesheet" href="~/css/AuthForm.css">
<title>@ViewData["Title"] ثبت مدارک در دیجی شاپ</title>
<link rel="stylesheet" href="~/css/Account.css">
@{
    Layout = "ManualPannel";
}
@{
    if (Model != null && !String.IsNullOrEmpty(Model.Message) && Model.IsCompleted)
    {
        <div class="alert alert-success hide">@Model.Message</div>
    }
    else if (Model != null && !String.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-danger hide">@Model.Message</div>
    }
}
<script>
  setTimeout(function() {
     $(".hide").fadeOut();
  },5000)
</script>

<body class="bodycolor">
<card>

<div class="container-fluid">
    <div class="row margin-top-50">
        <div class="col-md-6 col-sm offset-4 col-sm-4 col-md offset-4 col-sm-4 col-sm offset-4 col-xl-offset-3 col-xl-5-offset-5 loginbox">
                <img src="~/Images/Sites/DigiShop.png" class="img-responsive logo" style="padding-right: 75px;" alt="دیجی شاپ">
                <div class="card card-header bodycolor">
                    <h1 class="titleStyle"> DigiShop</h1>
                </div>
                    <div class="card card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <form asp-action="SendDocument" asp-controller="Seller" method="post" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <input asp-for="NationalCode" type="text" class="form-control inputStyle" placeholder="کد ملی ....">
                                        <span asp-validation-for="NationalCode" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Address" type="text" class="form-control inputStyle " placeholder="آدرس.... ">
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Homephone" type="text" class="form-control inputStyle" placeholder=" شماره منزل ....">
                                        <span asp-validation-for="Homephone" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="AccountOwner" type="text" class="form-control inputStyle" placeholder="صاحب حساب.... ">
                                        <span asp-validation-for="AccountOwner" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="BankName" type="text" class="form-control inputStyle" placeholder="نام بانک ....">
                                        <span asp-validation-for="NationalCode" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="CardNumber" type="text" class="form-control inputStyle" placeholder="شماره کارت ....">
                                        <span asp-validation-for="NationalCode" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="ShabaCode" type="text" class="form-control inputStyle" placeholder="شماره شبا  ....">
                                        <span asp-validation-for="NationalCode" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="File" type="file" class="form-control inputStyle" placeholder="تصویر کارت ملی  ....">
                                        <span asp-validation-for="File" class="text-danger"></span>
                                    </div>
                                    
                                    <div class="row" style="padding-right: 16px">
                                        <a href="#" style="font-family:'B Sahar'" type="checkbox"><input type="checkbox">به عنوان فروشنده قوانین را قبول دارم </a>
                                    </div>
                                    <br>
                                    <div class="card vr-cardboard btncardStyle">
                                        <button class="btn btn-primary btncardStyle" type="submit" dir="rtl">ارسال</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                
        </div>
    </div>
</div>

    
    
    

</card>
</body>
